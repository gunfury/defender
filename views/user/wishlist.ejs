            <%if(userWishlist?.length===0){%>
               
                    <div class="empty-cart-message" style="display: block;">
                        Your Wishlist is empty. <a href="/userSideProduct/sort" class="shop-now-btn" style="text-decoration: none;">add Now</a>
                    </div>
              <%} else {%>
            
            <table class="cart-table">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Product</th>
                        <th>Price</th>
                       
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody class="cart-items">
             
                <%userWishlist.forEach((items,id)=>{%>        
        <tr>
            
            <!-- Display the product image -->
            <td><img src="<%=items.productImage[1]%>" class="product-image"/></td>

    
            <!-- Display the product name -->
            <td><%=items.productName%></td>
            <!-- Display the product price -->
            <td>
                
                    <!-- Handle the case where price is not available -->
                    <span><%=items.price%></span>
                
            </td>
            
          
            
            <!-- Display the total price for this item -->
           
           
            
            
            
            
    
            <td>
                <form class="form-inline" method="post" action="/addcart/<%=items.productId%>">
                    <button class="cart-btn">Add to cart</button>
                </form>
                <form class="form-inline" method="post" action="/removefromwishList/<%=items.productId%>">
                    <button class="remove-btn">Remove</button>
                </form>
            </td>
            
           </tr>
           <%})}%>
         
<!-- end of Modal -->    
                    
