                }
    
    
                .checkout-btn {
                    padding: 12px 25px;
                    background-color: #4caf50;
                    color: #fff;
                    border: none;
                    border-radius: 4px;
                    cursor: pointer;
                    transition: background-color 0.3s;
                }
    
                .checkout-btn:hover {
                    background-color: #45a049;
                }
    
                .empty-cart-message {
                    text-align: center;
                    padding: 20px;
                    display: none;
                    animation: fadeIn 0.5s ease-out forwards;
                }
    
                @keyframes fadeIn {
                    from {
                        opacity: 0;
                    }
                    to {
                        opacity: 1;
                    }
                }
    
                .shop-now-btn {
                    padding: 10px 20px;
                    background-color: #ff4c57;
                    color: #fff;
                    border: none;
                    border-radius: 4px;
                    cursor: pointer;
                    transition: background-color 0.3s;
                    animation: slideIn 0.5s ease-out forwards;
                }
    
                .shop-now-btn:hover {
                    background-color: #d1404a;
                }
    
                @keyframes slideIn {
                    from {
                        transform: translateY(50px);
                        opacity: 0;
                    }
                    to {
                        transform: translateY(0);
                        opacity: 1;
                    }
                }
           
        
        .cart {
