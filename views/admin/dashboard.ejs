        <div class="container">
            <h1>Admin Dashboard</h1>
            <div class="row">
                <div class="col-md-6">
                    <canvas id="totalOrdersChart"></canvas>
                </div>
              
                <div class="col-md-6">
                    <canvas id="ordersPerStatusChart"></canvas>
                    </div>
            </div>
            <div class="col-md-6">
                <canvas id="revenuePerDayChart" style="padding-left: 35px;"></canvas>
            </div>
           
            <!-- Display raw data for debugging -->
           
       

        <script>
            document.addEventListener('DOMContentLoaded', function() {
                // Total Orders Chart
                new Chart(document.getElementById('totalOrdersChart').getContext('2d'), {
                    type: 'bar',
                    data: {
                        labels: ['Total Orders'],
                        datasets: [{
                            label: '# of Orders',
                            data: [<%= totalOrders %>],
                            backgroundColor: ['rgba(75, 192, 192, 0.2)'],
                            borderColor: ['rgba(75, 192, 192, 1)'],
                            borderWidth: 1
                        }]
                    }
                });

                // Orders per Status Chart
                const statusLabels = <%= JSON.stringify(ordersPerStatus.map(item => item._id)) %>;
                const statusCounts = <%= JSON.stringify(ordersPerStatus.map(item => item.count)) %>;
                new Chart(document.getElementById('ordersPerStatusChart').getContext('2d'), {
                    type: 'pie',
                    data: {
                        labels: statusLabels,
                        datasets: [{
                            label: '# of Orders',
                            data: statusCounts,
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.2)',
                                'rgba(54, 162, 235, 0.2)',
                                'rgba(255, 206, 86, 0.2)',
                                'rgba(75, 192, 192, 0.2)',
                                'rgba(153, 102, 255, 0.2)',
                                'rgba(255, 159, 64, 0.2)'
                            ],
                            borderColor: [
                                'rgba(255, 99, 132, 1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(255, 206, 86, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(153, 102, 255, 1)',
                                'rgba(255, 159, 64, 1)'
                            ],
                            borderWidth: 1
                        }]
                    }
                });

                // Revenue per Day Chart
                const revenueLabels = <%= JSON.stringify(revenuePerDay.map(item => item._id)) %>;
                const revenueData = <%= JSON.stringify(revenuePerDay.map(item => item.total)) %>;
                new Chart(document.getElementById('revenuePerDayChart').getContext('2d'), {
                    type: 'line',
                    data: {
                        labels: revenueLabels,
                        datasets: [{
                            label: 'Revenue',
                            data: revenueData,
                            backgroundColor: 'rgba(54, 162, 235, 0.2)',
                            borderColor: 'rgba(54, 162, 235, 1)',
                            borderWidth: 1
                        }]
                    }
                });
            });
        </script>
