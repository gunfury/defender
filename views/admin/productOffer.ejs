      <script>
        function openEditModal(id) {
            fetch(`/getProductOffer/${id}`)
                .then(response => response.json())
                .then(data => {
                    // Clear previous options
                    $('#editSelectProduct').empty();
    
                    // Populate the product options
                    data.products.forEach(product => {
                        $('#editSelectProduct').append(new Option(product.productName, product._id));
                    });
    
                    // Set the form field values
                    $('#editSelectProduct').val(data.product._id);
                    $('#editStartDate').val(new Date(data.product.startDate).toISOString().substr(0, 10));
                    $('#editEndDate').val(new Date(data.product.endDate).toISOString().substr(0, 10));
                    $('#editOfferDiscount').val(data.product.discount);
    
                    // Show the modal
                    $('#editOfferModal').modal('show');
                })
                .catch(error => {
                    console.error('Error fetching product data:', error);
                });
        }
    
        function updateOffer() {
            const id = $('#editSelectProduct').val();
            const startDate = $('#editStartDate').val();
            const endDate = $('#editEndDate').val();
            const discount = $('#editOfferDiscount').val();
    
            fetch('/updateProductOffer', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ id, startDate, endDate, discount })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Close the modal and reload the page
                    $('#editOfferModal').modal('hide');
                    window.location.reload();
                } else {
                    // Handle error
                    document.getElementById('editErrorMessage').innerText = data.message;
                }
            })
            .catch(error => {
                console.error('Error updating product offer:', error);
            });
        }
    </script>
    
    
       


   
    
